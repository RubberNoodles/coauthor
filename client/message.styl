.text-help
  text-decoration: dotted underline gray
  cursor: help

.danger-close
  color: #d9534f  // background color of .label-danger

.attachInput[type="file"], .replaceInput[type="file"]
  display: none

.historySlider input[type="text"]
  display: none

.onMessageDrop span
  pointer-events: none

// Dropdown menus

.dropdown-menu.actionMenu
  min-width: 120px
  background: #d9edf7
  /.dark &
    background: #175b70
  > li > a
    padding: 2px 10px
    &:hover
      background: white

//.dropdown-menu.actionMenu > li > a:hover { min-width: 100px; background: white; }

// Emoji dropdown menu

.emojiMenu
  padding: 5px // normally 5px 0
  width: max-content
  min-width: auto
  max-width: 300px
  > li
    display: inline-block
    > a
      display: inline-block
      font-size: large
      padding: 8px 8px  // normally 3px 20px
.open > .emojiMenu.dropdown-menu
  display: table

// Emoji

.emoji-plus
  font-size: 0.7em
  margin-top: -2px
  vertical-align: middle
.emoji-face
  margin-top: -2px
  vertical-align: middle
.positive
  color: #3d98e5
.neutral
  color: #8465b3
.negative
  color: #d9534f
.dark .positive
  color: #6bade5
.dark .neutral
  color: #ad76fe
.dark .negative
  color: #ff7a75
.my-emoji
  background: hsl(60, 80%, 70%)
.dark .my-emoji
  background: hsl(60, 100%, 20%)

// BelowEditor

.below-editor-alert
  padding: 6px 15px
  margin-bottom: 0px
  // To allow Coauthors alert's <input> to bleed into 6px top/bottom padding,
  // simulate it with an upper strut at the beginning.  (The lower strut is
  // simulated by the <input> itself.)
  &.coauthors-alert
    padding-top: 0px
    padding-bottom: 0px
    .upper-strut
      display: inline-block
      padding-top: 6px
    //.lower-strut
    //  display: inline-block
    //  padding-bottom: 6px
    input // override .form-control
      display: inline-block
      width: auto
    .rbt
      display: inline-block

// TableOfContents

nav.contents
  padding-bottom: 5px
  height: 100%  // match parent height set in JavaScript
  overflow-y: auto
